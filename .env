CELLAR_ADDON_KEY_ID=
CELLAR_ADDON_KEY_SECRET=
CELLAR_ADDON_REGION=
CELLAR_BUCKET_NAME=

; CleverCloud MongoDB environement variables
MONGODB_ADDON_HOST=
MONGODB_ADDON_DB=
MONGODB_ADDON_USER=
MONGODB_ADDON_PORT=
MONGODB_ADDON_PASSWORD=
